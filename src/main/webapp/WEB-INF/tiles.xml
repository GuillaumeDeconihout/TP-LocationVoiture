       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="index" template="/layout/template.jsp">
		<put-attribute name="title" value="Tiles title for homepage" />
		<put-attribute name="header" value="/layout/header.jsp" />
		<put-attribute name="body" value="/pages/welcome/index.jsp" />
